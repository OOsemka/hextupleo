# Use this environment to pass in certificates for SSL deployments.
# For these values to take effect, one of the tls-endpoints-*.yaml environments
# must also be used.
parameter_defaults:
  SSLCertificate: |
{{ ssl_cert.stdout }}
  SSLIntermediateCertificate: ''
  SSLKey: |
{{ ssl_key.stdout }}

resource_registry:
  OS::TripleO::NodeTLSData: {{ path_value }}/puppet/extraconfig/tls/tls-cert-inject.yaml
